# Ensure all text files have LF line endings
* text=auto

# Force specific files to use LF line endings
*.java text eol=lf
*.xml text eol=lf
*.properties text eol=lf
*.yml text eol=lf
*.md text eol=lf
*.sh text eol=lf
*.py text eol=lf
*.js text eol=lf
*.css text eol=lf
*.html text eol=lf

# Ensure .gitignore uses LF line endings
.gitignore text eol=lf
